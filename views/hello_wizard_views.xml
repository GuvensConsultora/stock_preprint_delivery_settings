<!-- wizards/hello_wizard_views.xml -->
<odoo>
  <record id="view_albaran_print_hello_wizard" model="ir.ui.view">
    <field name="name">albaran.print.hello.wizard.form</field>
    <field name="model">albaran.print.hello.wizard</field>
    <field name="arch" type="xml">
      <form string="Impresión de Albarán">
	  <group>
          <field name="picking_id" readonly="1"/>
          <field name="picking_type_code" readonly="1" string="Tipo"/>
          <field name="total_lines" readonly="1"/>
          <field name="lines_per_doc"/>
          <field name="expected_docs" readonly="1"/>
        </group>
        <group>
          <field name="detail_note" widget="html" nolabel="1" readonly="1"/>
        </group>
	<group>
	  <field name="sequence_id"/>
	  <field name="next_numbers_preview" widget="text" nolabel="0"/>
	</group>

	<group>
          <field name="message"/>                      <!-- muestra "Hola munod" -->
        </group>

	<footer>	  
	  <button string="Confirmar" type="object" name="action_confirm_preprint" class="btn-primary"/>
          <button string="Cerrar" class="btn-secondary" special="cancel"/>  <!-- cerrar -->
        </footer>
      </form>
    </field>
  </record>
</odoo>
